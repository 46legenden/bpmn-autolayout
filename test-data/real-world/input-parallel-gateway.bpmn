<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL"
                   xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
                   xmlns:dc="http://www.omg.org/spec/DD/20100524/DC"
                   xmlns:di="http://www.omg.org/spec/DD/20100524/DI"
                   id="Definitions_1"
                   targetNamespace="http://bpmn.io/schema/bpmn">
  
  <bpmn:process id="Process_1" isExecutable="false">
    
    <!-- Lanes -->
    <bpmn:laneSet id="LaneSet_1">
      <bpmn:lane id="lane_hr" name="HR Department">
        <bpmn:flowNodeRef>start</bpmn:flowNodeRef>
        <bpmn:flowNodeRef>task_receive_application</bpmn:flowNodeRef>
        <bpmn:flowNodeRef>parallel_split</bpmn:flowNodeRef>
        <bpmn:flowNodeRef>parallel_merge</bpmn:flowNodeRef>
        <bpmn:flowNodeRef>task_make_decision</bpmn:flowNodeRef>
        <bpmn:flowNodeRef>end</bpmn:flowNodeRef>
      </bpmn:lane>
      
      <bpmn:lane id="lane_technical" name="Technical Team">
        <bpmn:flowNodeRef>task_technical_interview</bpmn:flowNodeRef>
      </bpmn:lane>
      
      <bpmn:lane id="lane_background" name="Background Check">
        <bpmn:flowNodeRef>task_background_check</bpmn:flowNodeRef>
      </bpmn:lane>
      
      <bpmn:lane id="lane_references" name="References">
        <bpmn:flowNodeRef>task_check_references</bpmn:flowNodeRef>
      </bpmn:lane>
    </bpmn:laneSet>
    
    <!-- Start Event -->
    <bpmn:startEvent id="start" name="Application Received">
      <bpmn:outgoing>flow1</bpmn:outgoing>
    </bpmn:startEvent>
    
    <!-- Task: Receive Application -->
    <bpmn:task id="task_receive_application" name="Review Application">
      <bpmn:incoming>flow1</bpmn:incoming>
      <bpmn:outgoing>flow2</bpmn:outgoing>
    </bpmn:task>
    
    <!-- Parallel Gateway: Split (AND) -->
    <bpmn:parallelGateway id="parallel_split" name="Start Parallel Checks">
      <bpmn:incoming>flow2</bpmn:incoming>
      <bpmn:outgoing>flow3</bpmn:outgoing>
      <bpmn:outgoing>flow4</bpmn:outgoing>
      <bpmn:outgoing>flow5</bpmn:outgoing>
    </bpmn:parallelGateway>
    
    <!-- Parallel Task 1: Technical Interview -->
    <bpmn:task id="task_technical_interview" name="Technical Interview">
      <bpmn:incoming>flow3</bpmn:incoming>
      <bpmn:outgoing>flow6</bpmn:outgoing>
    </bpmn:task>
    
    <!-- Parallel Task 2: Background Check -->
    <bpmn:task id="task_background_check" name="Background Check">
      <bpmn:incoming>flow4</bpmn:incoming>
      <bpmn:outgoing>flow7</bpmn:outgoing>
    </bpmn:task>
    
    <!-- Parallel Task 3: Check References -->
    <bpmn:task id="task_check_references" name="Check References">
      <bpmn:incoming>flow5</bpmn:incoming>
      <bpmn:outgoing>flow8</bpmn:outgoing>
    </bpmn:task>
    
    <!-- Parallel Gateway: Merge (AND) -->
    <bpmn:parallelGateway id="parallel_merge" name="Wait for All Checks">
      <bpmn:incoming>flow6</bpmn:incoming>
      <bpmn:incoming>flow7</bpmn:incoming>
      <bpmn:incoming>flow8</bpmn:incoming>
      <bpmn:outgoing>flow9</bpmn:outgoing>
    </bpmn:parallelGateway>
    
    <!-- Task: Make Decision -->
    <bpmn:task id="task_make_decision" name="Make Hiring Decision">
      <bpmn:incoming>flow9</bpmn:incoming>
      <bpmn:outgoing>flow10</bpmn:outgoing>
    </bpmn:task>
    
    <!-- End Event -->
    <bpmn:endEvent id="end" name="Process Complete">
      <bpmn:incoming>flow10</bpmn:incoming>
    </bpmn:endEvent>
    
    <!-- Sequence Flows -->
    <bpmn:sequenceFlow id="flow1" sourceRef="start" targetRef="task_receive_application" />
    <bpmn:sequenceFlow id="flow2" sourceRef="task_receive_application" targetRef="parallel_split" />
    <bpmn:sequenceFlow id="flow3" name="Technical" sourceRef="parallel_split" targetRef="task_technical_interview" />
    <bpmn:sequenceFlow id="flow4" name="Background" sourceRef="parallel_split" targetRef="task_background_check" />
    <bpmn:sequenceFlow id="flow5" name="References" sourceRef="parallel_split" targetRef="task_check_references" />
    <bpmn:sequenceFlow id="flow6" sourceRef="task_technical_interview" targetRef="parallel_merge" />
    <bpmn:sequenceFlow id="flow7" sourceRef="task_background_check" targetRef="parallel_merge" />
    <bpmn:sequenceFlow id="flow8" sourceRef="task_check_references" targetRef="parallel_merge" />
    <bpmn:sequenceFlow id="flow9" sourceRef="parallel_merge" targetRef="task_make_decision" />
    <bpmn:sequenceFlow id="flow10" sourceRef="task_make_decision" targetRef="end" />
    
  </bpmn:process>
</bpmn:definitions>
